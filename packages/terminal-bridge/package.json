{
  "name": "@chaosfix/terminal-bridge",
  "version": "0.1.0",
  "private": true,
  "description": "xterm.js and node-pty integration for ChaosFix",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./renderer": {
      "types": "./dist/renderer.d.ts",
      "import": "./dist/renderer.mjs",
      "require": "./dist/renderer.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/renderer.ts --format cjs,esm --dts --external electron",
    "dev": "tsup src/index.ts src/renderer.ts --format cjs,esm --dts --external electron --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist node_modules"
  },
  "dependencies": {
    "@chaosfix/core": "workspace:*",
    "@xterm/xterm": "^5.5.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-search": "^0.15.0",
    "@xterm/addon-web-links": "^0.11.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "electron": ">=28.0.0"
  }
}
